// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String? @unique
  firstName String
  lastName String?
  password String?
  userId String @unique @default(uuid())
  role Role @default(Carer)
  resetPassword Boolean @default(true)
  posts Post[] @relation("Carer")
  clients UsersClients[]
  refreshToken RefreshToken[] @relation("Token")
  icon Icon? @relation("Icon")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id Int @id @default(autoincrement())
  carer User? @relation("Carer", fields:[carerId], references: [userId])
  carerId String?
  client String?
  hours Int?
  date DateTime?
  kilos Int?
  notes String?
  private Boolean? @default(false)
  postId String @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client{
  id Int @id @default(autoincrement())
  clientId String @unique @default(uuid())
  firstName String
  lastName String?
  address String?
  phoneNumber Int?
  email String?
  details String?
  carers UsersClients[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UsersClients {
  user User @relation(fields: [userId], references: [userId])
  userId String
  client Client @relation(fields:[clientId], references: [clientId])
  clientId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@id([userId, clientId])
}

model RefreshToken {
  id Int @id @default(autoincrement())
  userId String
  user User @relation("Token", fields: [userId], references: [userId])
  token String @unique
  expiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Icon {
  id Int @id @default(autoincrement())
  userId String @unique
  user User @relation("Icon", fields:[userId], references: [userId])
  icon String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role{
  Carer
  Admin
  Coordinator
}